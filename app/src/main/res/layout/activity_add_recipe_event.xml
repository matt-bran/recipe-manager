<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddRecipeEventActivity"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/edit_text_add_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/calendar_day_headers_paddingbottom"/>
    <EditText
        android:id="@+id/edit_text_add_event_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingBottom="4dp"
        android:hint="Enter event note"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view_add_recipe_event"
        tools:listitem="@layout/item_recipe"/>

</LinearLayout>